<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
        	<solid
        		android:color="#D7AF59" />
            <stroke
                android:width="1dp"
                android:color="#9E9E9F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
        
    <item android:state_pressed="true" >
        <shape>
        	<solid
        		android:color="#f3ae1b" />
            <stroke
                android:width="1dp"
                android:color="#bb6008" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item
        android:drawable="@drawable/tichu_color">
        <padding
	        android:left="10dp"
	        android:top="10dp"
	        android:right="10dp"
	        android:bottom="10dp" />
    </item>
</selector>