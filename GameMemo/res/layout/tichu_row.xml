<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/tichu_row_starttime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="1.5"
        android:lines="2"
        android:text="@string/tichu_row_time_empty"
        android:textSize="17sp" >

    </TextView>
    
    <TextView
        android:id="@+id/tichu_row_team1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="2"
        android:text="@string/tichu_row_team1_heading"
        android:textSize="20sp" />
    
        <TextView
            android:id="@+id/tichu_row_team2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="2"
            android:text="@string/tichu_row_team2_heading"
            android:textSize="20sp" />

</LinearLayout>