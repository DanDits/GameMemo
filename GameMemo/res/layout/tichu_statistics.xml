<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TabWidget
        android:id="@android:id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="65dp" >

        <ScrollView
            android:id="@+id/statistics_by_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/player_statistics_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Spinner
                    android:id="@+id/statistics_select_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*" >
				<TableRow
                        android:id="@+id/tableRow0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                        	android:id="@+id/statistics_empty_top_left_cell"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>

                        <TextView
                            android:id="@+id/tichu_overview_team1_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/statistics_column_header_total_abs_value" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/statistics_column_header_won" />
 
                    </TableRow>
                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/statistic_games_played_descr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/statistics_games_played_descr" >
                        </TextView>

                        <TextView
                            android:id="@+id/statistic_games_played"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </TextView>

                        <TextView
                            android:id="@+id/statistic_games_won"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </TextView>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/statistic_rounds_played_descr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/statistics_rounds_played_descr" >
                        </TextView>

                        <TextView
                            android:id="@+id/statistic_rounds_played"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </TextView>

                        <TextView
                            android:id="@+id/statistic_rounds_won"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </TextView>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/statistic_small_tichus_descr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/statistics_small_tichus_descr" >
                        </TextView>

                        <TextView
                            android:id="@+id/statistic_small_tichu_bids"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </TextView>

                        <TextView
                            android:id="@+id/statistic_small_tichus_won"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </TextView>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/statistic_big_tichus_descr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/statistics_big_tichus_descr" >
                        </TextView>

                        <TextView
                            android:id="@+id/statistic_big_tichu_bids"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </TextView>

                        <TextView
                            android:id="@+id/statistic_big_tichus_won"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </TextView>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/statistic_average_finisher_pos_descr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/statistics_average_finisher_pos_descr" >
                        </TextView>

                        <TextView
                            android:id="@+id/statistic_average_finisher_pos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </TextView>
                    </TableRow>

                    <TableRow
                        android:id="@+id/TableRow02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/statistics_score_per_round_no_tichus" />

                        <TextView
                            android:id="@+id/statistics_score_per_round_no_tichus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/TableRow01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/statistics_score_per_round_incl_tichus" />

                        <TextView
                            android:id="@+id/statistics_score_per_round_incl_tichus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/statistics_b_genre"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Spinner
                    android:id="@+id/statistics_select_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TableLayout
                    android:id="@+id/statistics_by_genre_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*" >

                    <TableRow
                        android:id="@+id/tableRow9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/statistics_by_genre_value_column_descr" />

                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</TabHost>