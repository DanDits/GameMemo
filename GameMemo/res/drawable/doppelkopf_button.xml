<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
        	<solid
        		android:color="#E9676B" />
            <stroke
                android:width="1dp"
                android:color="#9F3E41" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="10dp"
                android:right="2dp"
                android:bottom="10dp" />
        </shape>
    </item>
        
    <item android:state_pressed="true" >
        <shape>
        	<solid
        		android:color="#D20132" />
            <stroke
                android:width="1dp"
                android:color="#68081F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
                android:top="10dp"
                android:right="1dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item
        android:drawable="@drawable/doppelkopf_color">
        <padding
	        android:left="1dp"
	        android:top="10dp"
	        android:right="1dp"
	        android:bottom="10dp" />
    </item>
</selector>